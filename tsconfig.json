{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "DOM", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["src/*"],
      "@components*": ["components", "src/components*"],
      "@utils*": ["src/utils", "src/utils*"],
      "types*": ["src/types", "src/utils*"],
      "@views*": ["src/views", "src/views*"],
      "@navigation*": ["src/navigation", "src/navigation*"],
      "@hooks*": ["src/hooks", "src/hooks*"],
      "@api*": ["src/api", "src/api*"],
      "@icons*": ["@icons", "@icons*"],
      "@selectors": ["src/redux/selectors.ts"],
      "@assets": ["src/assets", "src/assets*"],
      "@products-assets": ["src/assets/products"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
