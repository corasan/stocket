{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@components*": ["src/components"],
      "@utils*": ["src/utils", "src/utils*"],
      "types*": ["src/types", "src/utils*"],
      "@views*": ["src/views", "src/views*"],
      "@navigation*": ["src/navigation", "src/navigation*"],
      "@hooks*": ["src/hooks", "src/hooks*"],
      "@api*": ["src/api", "src/api*"],
      "@icons*": ["src/components/Icons", "src/components/Icons*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
